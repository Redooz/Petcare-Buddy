<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".views.home.PetDetailsFragment">

    <ImageView
        android:id="@+id/petImgView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/pet_image_description"
        app:srcCompat="@drawable/pet_icon" />

    <TextView
        android:id="@+id/petNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Pet's Name"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/petAgeTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Age: 0"
        android:textColor="@color/black"
        android:textSize="25sp" />

</LinearLayout>